<hibernate-mapping default-lazy="false">

    <class name="org.ecobill.module.base.domain.Person" table="BASE_PERSON">

        <id name="id" type="long" unsaved-value="-1">
            <column name="ID" not-null="true"/>
            <generator class="native"/>
        </id>

        <many-to-one name="title"
                     column="TITLE_ID"
                     class="org.ecobill.module.base.domain.SystemUnit"
                     cascade="none"
                     lazy="false"/>

        <many-to-one name="academicTitle"
                     column="ACADEMIC_TITLE_ID"
                     class="org.ecobill.module.base.domain.SystemUnit"
                     cascade="none"
                     lazy="false"/>

        <property name="firstname" type="string">
            <column name="FIRSTNAME" not-null="false"/>
        </property>

        <property name="lastname" type="string">
            <column name="LASTNAME" not-null="false"/>
        </property>

        <property name="phone" type="string">
            <column name="PHONE" not-null="false"/>
        </property>

        <property name="fax" type="string">
            <column name="FAX" not-null="false"/>
        </property>

        <property name="email" type="string">
            <column name="EMAIL" not-null="false"/>
        </property>

        <many-to-one name="address" class="org.ecobill.module.base.domain.Address" column="ADDRESS_ID"/>

    </class>

</hibernate-mapping>